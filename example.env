# Configuraci贸n de la aplicaci贸n
NODE_ENV=development
PORT=3000

# Database
POSTGRES_HOST=example_host
POSTGRES_PORT=5432
POSTGRES_USER=example_user
POSTGRES_PASSWORD=example_password
POSTGRES_DB=example_db
TYPEORM_SYNC=true
TYPEORM_MIGRATIONS_RUN=false

# JWT
JWT_SECRET=example_jwt_secret
JWT_EXPIRATION_TIME=1h
JWT_REFRESH_SECRET=example_jwt_refresh_secret
JWT_REFRESH_EXPIRATION_TIME=7d
JWT_RESET_PASSWORD_SECRET=example_jwt_reset_password_secret
JWT_RESET_PASSWORD_EXPIRATION_TIME=1h

# Google OAuth
GOOGLE_CLIENT_ID=example_google_client_id
GOOGLE_CLIENT_SECRET=example_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Email (Mailjet)
MAILJET_API_KEY=example_mailjet_api_key
MAILJET_SECRET_KEY=example_mailjet_secret_key
MAIL_FROM=example@email.com

# Frontend
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Webpay Plus (Transbank)
# Valores para ambiente de integraci贸n (desarrollo)
WEBPAY_COMMERCE_CODE=example_webpay_commerce_code
WEBPAY_API_KEY=example_webpay_api_key

# Para producci贸n, reemplazar con valores reales
# WEBPAY_COMMERCE_CODE=tu_codigo_de_comercio
# WEBPAY_API_KEY=tu_clave_secreta

# AWS S3
AWS_ACCESS_KEY_ID=example_aws_access_key_id
AWS_SECRET_ACCESS_KEY=example_aws_secret_access_key
AWS_REGION=example_aws_region
AWS_S3_BUCKET=example_s3_bucket_name
